        <div class = "course_link"><a href="/personalPage">courses_page(default)</a></div>
        <div><a class = "analysis_link" href="/analysisPage">analysis_page</a></div>
    </div>
    <div class = "right">
        <div class = "middle">
            <div>Academic Summary</div>
            <div>course_name    Instructor    GPA</div>
            <% item.user_courses.map(function(course, index) { %>
                <span><%= course %></span>
                <span>Instructor</span>
                <span>GPA</span><br>
            <% }) %><br>
        </div>
    </div>
  </body>
