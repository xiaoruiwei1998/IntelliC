          <% } %>
  
    <% item.course_assignments.map(function(assignment, index) { %>
      <% if (assignment.a_courseID == thisCourse) { %>
        <% if (userType == 'I') { %>
          <div id = "row_2" class = "row">
            <div class = "col-lg-3">
              <a class = "edit" href="assignments/editAssignment?a_name=<%=assignment.a_name%>&course_name=<%=course_name%>&course_inst=<%=course_inst%>"><i id = "pencil_icon" class = "fa fa-pencil"></i></a > 
              &nbsp
              <a class = "delete" href="assignments/deleteAssignment?a_name=<%=assignment.a_name%>&course_name=<%=course_name%>&course_inst=<%=course_inst%>"><i id = "delete_icon" class = "fa fa-window-close-o"></i></a > 
            </div>
            <div class = "col-lg-3">
              <% if(userType == 'I') { %>
                <a class = "homework_name" href="/inst2StudentAssignmentsPage?thisCourse=<%=thisCourse%>&thisAssignment=<%= assignment.a_name %>&a_release=<%=assignment.a_release%>&a_due=<%=assignment.a_due%>">
                  <%= assignment.a_name %></a > 
              <% } else { %>
                <a class = "homework_name" href="/oneAssignmentPage?a_type=<%=assignment.a_type%>&a_log=<%= assignment.a_log%>&a_name=<%= assignment.a_name%>&a_courseID=<%=assignment.a_courseID%>&a_status=<%=assignment.a_status%>&a_release=<%=assignment.a_release%>&a_due=<%=assignment.a_due%>&a_questions=<%=assignment.a_questions%>">
                  <%= assignment.a_name %></a > 
              <% } %>
            </div>
            <div class = "col-lg-2">
              <% if (assignment.a_name == "Homework6") {%>
                1 / 3
              <%} else{%>
                0 / 3 
              <%}%>
            </div>
            <div class = "col-lg-2">
              <%= assignment.a_release %> 
            </div>
            <div class = "col-lg-2">
              <%= assignment.a_due %> 
            </div>
            <div class = "bottom_line"></div>
